post_install() {
    glib-compile-schemas usr/share/glib-2.0/schemas
    update-desktop-database -q
    xdg-icon-resource forceupdate --theme hicolor
}

pre_upgrade() {
    if [ -f usr/share/gconf/schemas/trifle.schemas ]; then
        usr/sbin/gconfpkg --uninstall trifle
    fi
}

post_upgrade() {
    post_install $1
}

post_remove() {
    post_install $1
    if [ -f usr/share/gconf/schemas/trifle.schemas ]; then
        usr/sbin/gconfpkg --uninstall trifle
    fi
}
