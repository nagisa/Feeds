pkgname='trifle'
pkgver='1.0'
pkgrel=1
pkgdesc='Google Reader for GNOME'
url='https://github.com/simukis/Feeds'
license=('GPL2')
arch=('any')
depends=('python' 'libgnome-keyring' 'gtk3' 'libwebkit3' 'libnotify')
#optdepends=('')
hash='80ececa410c3fe895ee3100a7fa2c7451458a9d8'
short_hash=$(echo $hash | head -c7)
source=("$url/zipball/$short_hash")
#md5sums=('')

package() {
    cd $srcdir/simukis-Feeds-$short_hash/
    python setup.py install --prefix=$pkgdir/usr/
    rm $pkgdir/usr/share/glib-2.0/schemas/gschemas.compiled
}

